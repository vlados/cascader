{
    "name": "vlados/cascader",
    "description": "A cascading dropdown component for Laravel Livewire with Alpine.js",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vlado",
            "email": "vlado@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "orchestra/testbench": "^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Vlados\\Cascader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vlados\\Cascader\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vlados\\Cascader\\CascaderServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
